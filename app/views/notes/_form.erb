

<%= form_for @note do |f| %>
<% if @note.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@note.errors.count, "error") %> when entering data:</h2>
    <ul>
    <% @note.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


  <p>
    <%= f.label :Nota %><br>
    <%= f.text_field :valor %>
  </p>

  <p>
    <%= f.submit %>
  </p>
   
<% end %>


