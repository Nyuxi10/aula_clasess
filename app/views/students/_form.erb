<%= form_for @student do |f| %>


<% if @student.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> when entering data:</h2>
    <ul>
    <% @student.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


  <p>
    <%= f.label :Estudiante %><br>
    <%= f.text_field :nombre %>
  </p>

  <p>
    <%= f.submit %>
  </p>
   
<% end %>


